# Production Environment Variables for User Services

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration
DATABASE_URL=postgresql://user_services_user:your_secure_db_password@postgres:5432/user_services_db
DATABASE_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://:your_secure_redis_password@redis:6379

# MongoDB Configuration
MONGODB_URL=mongodb://user_services_user:your_secure_mongo_password@mongodb:27017
MONGODB_DATABASE=user_services_db

# Logging
RUST_LOG=info

# Docker Registry (for production builds)
REGISTRY=your-registry.com
VERSION=1.0.0

# Database Credentials (used by docker-compose)
DB_NAME=user_services_db
DB_USER=user_services_user
DB_PASSWORD=your_secure_db_password

# Redis Password (used by docker-compose)
REDIS_PASSWORD=your_secure_redis_password

# MongoDB Credentials (used by docker-compose)
MONGO_USER=user_services_user
MONGO_PASSWORD=your_secure_mongo_password
MONGO_DB=user_services_db
