# Production Environment Variables

# Database
DB_NAME=rust_forge_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# Redis
REDIS_PASSWORD=your_secure_redis_password

# MongoDB
MONGO_USER=your_mongo_user
MONGO_PASSWORD=your_secure_mongo_password
MONGO_DB=rust_forge_db

# Docker Registry
REGISTRY=your-registry.com
VERSION=1.0.0

# Application
APP__SERVER__HOST=0.0.0.0
APP__SERVER__PORT=8080
APP__DATABASE__URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}
APP__DATABASE__MAX_CONNECTIONS=20
APP__REDIS__URL=redis://:${REDIS_PASSWORD}@redis:6379
APP__MONGODB__URL=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@mongodb:27017
APP__MONGODB__DATABASE=${MONGO_DB}

# Logging
RUST_LOG=info
